/**app.wxss**/

/* 导入通用样式 */
@import './styles/common.wxss';

/* 全局页面样式 */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 全局按钮重置 */
button {
  background: initial;
  border: none;
  outline: none;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 全局容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

