/* 通用样式文件 */

/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 50rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background-color: white;
  border: 2rpx solid #1E88E5;
  color: #1E88E5;
}

.btn-outline {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.btn-outline:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 文本样式 */
.text-primary {
  color: #667eea;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-white {
  color: white;
}

.text-bold {
  font-weight: bold;
}

.text-center {
  text-align: center;
}

/* 间距样式 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pt-30 { padding-top: 30rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pb-30 { padding-bottom: 30rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-start {
  display: flex;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 36rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: background-color 0.2s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f9fa;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999;
}

.list-item-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
  transition: transform 0.2s ease;
}

.list-item:active .list-item-arrow {
  transform: translateX(6rpx);
}

/* 状态样式 */
.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-success {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.status-warning {
  background-color: #fffbe6;
  color: #FFB300;
}

.status-error {
  background-color: #ffe8e8;
  color: #f44336;
}

.status-info {
  background-color: #e3f2fd;
  color: #2196F3;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  letter-spacing: 0.5rpx;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  border: none;
  background: transparent;
  font-size: 28rpx;
}

.search-icon {
  color: #999;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 12rpx 20rpx;
  margin-right: 12rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f9f9f9;
}

.tag.active {
  border-color: #4CAF50;
  color: #4CAF50;
  background-color: #e8f5e8;
}

/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 阴影效果 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.shadow-md {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

/* 渐变背景 */
.gradient-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.gradient-success {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.gradient-warning {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.gradient-info {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

/* 圆角 */
.rounded-sm {
  border-radius: 8rpx;
}

.rounded-md {
  border-radius: 16rpx;
}

.rounded-lg {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 50%;
}

/* 过渡动画 */
.transition {
  transition: all 0.3s ease;
}

.transition-fast {
  transition: all 0.2s ease;
}