/* pages/webview/index.wxss */
.container {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5;
}

web-view {
  width: 100%;
  height: 100%;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  height: 100vh;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.wechat-tips {
  background-color: #e8f5e9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  width: 100%;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2e7d32;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  margin-bottom: 60rpx;
}

.action-btn {
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  outline: none;
}

.wechat-btn {
  background-color: #07c160;
  color: white;
}

.copy-btn {
  background-color: #1E88E5;
  color: white;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
}

.tips-section {
  width: 100%;
}

.tips-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  text-align: left;
}

.tips-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #1E88E5;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}