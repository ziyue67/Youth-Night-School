/* pages/webview/index.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 30rpx;
}

.link-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.link-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.link-url {
  font-size: 28rpx;
  color: #666;
  word-break: break-all;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #1E88E5;
}

.wechat-tips {
  background-color: #e8f5e9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2e7d32;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  margin-bottom: 40rpx;
}

.action-btn {
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  outline: none;
}

.wechat-btn {
  background-color: #07c160;
  color: white;
}

.copy-btn {
  background-color: #1E88E5;
  color: white;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
}

.tips-section {
  width: 100%;
}

.tips-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  text-align: left;
}

.tips-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #1E88E5;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}