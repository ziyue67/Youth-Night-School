<view class="container">
  <web-view 
    src="{{url}}" 
    bindload="onWebLoadSuccess"
    binderror="onWebLoadError">
  </web-view>
  
  <!-- 调试信息 -->
  <view wx:if="{{loadError}}" style="position: fixed; top: 20rpx; left: 20rpx; right: 20rpx; background: #ff4444; color: white; padding: 20rpx; border-radius: 8rpx; z-index: 1000;">
    <view>加载失败: {{errorMessage}}</view>
    <view>URL: {{url}}</view>
    <button bindtap="copyToWeChat" style="margin-top: 20rpx;">复制链接</button>
    <button bindtap="goBack" style="margin-top: 20rpx; margin-left: 20rpx;">返回</button>
  </view>
</view>