<view class="container">
  <!-- 顶部标题栏 -->
  <view class="header">
    <view class="header-left">
      <text class="college-name">{{currentCollege}}</text>
    </view>
    <view class="header-right">
      <text class="page-title">青春夜校课程安排</text>
    </view>
  </view>

  <view class="content">
    <!-- 左侧学院导航 -->
    <view class="sidebar">
      <view class="nav-item {{currentCollege === '建筑工程学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="建筑工程学院">
        <text>建筑工程学院</text>
      </view>
      <view class="nav-item {{currentCollege === '智能制造与电梯学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="智能制造与电梯学院">
        <text>智能制造与电梯学院</text>
      </view>
      <view class="nav-item {{currentCollege === '新能源工程与汽车学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="新能源工程与汽车学院">
        <text>新能源工程与汽车学院</text>
      </view>
      <view class="nav-item {{currentCollege === '信息工程与物联网学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="信息工程与物联网学院">
        <text>信息工程与物联网学院</text>
      </view>
      <view class="nav-item {{currentCollege === '经济管理与电商学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="经济管理与电商学院">
        <text>经济管理与电商学院</text>
      </view>
      <view class="nav-item {{currentCollege === '旅游管理学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="旅游管理学院">
        <text>旅游管理学院</text>
      </view>
      <view class="nav-item {{currentCollege === '艺术设计与时尚创意学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="艺术设计与时尚创意学院">
        <text>艺术设计与时尚创意学院</text>
      </view>
      <view class="nav-item {{currentCollege === '社会发展与公共教育学院' ? 'active' : ''}}" 
            bindtap="switchCollege" 
            data-college="社会发展与公共教育学院">
        <text>社会发展与公共教育学院</text>
      </view>
    </view>

    <!-- 右侧课程内容 -->
    <view class="main-content">
    <view class="current-college-info">
      <text class="college-title">{{currentCollege}}</text>
      <text class="course-count">{{courses.length}} 门课程</text>
    </view>

    <!-- 月份滑块 -->
    <scroll-view scroll-x class="month-tabs">
      <view class="month-tab {{currentMonth===item? 'active' : ''}}" wx:for="{{months}}" wx:key="month" data-month="{{item}}" bindtap="onMonthTap">{{item}}月</view>
      <view wx:if="{{months.length===0}}" class="month-empty">暂无月份</view>
    </scroll-view>

      <view class="course-list">
        <view class="course-item" wx:for="{{courses}}" wx:key="id">
          <view class="course-header">
            <text class="course-name">{{item.name}}</text>
            <text class="course-status {{item.status}}">{{item.status}}</text>
          </view>
          <view class="course-details">
            <text class="course-time">时间：{{item.time}}</text>
            <text class="course-teacher">教师：{{item.teacher}}</text>
          </view>
        </view>
        
        <view wx:if="{{courses.length === 0}}" class="empty-state">
          <text>暂无{{currentCollege}} {{currentMonth}} 月的课程</text>
        </view>
      </view>
    </view>
  </view>
</view>
