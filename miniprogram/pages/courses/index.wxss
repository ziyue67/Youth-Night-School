/* 课程页面样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: white;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
  flex-wrap: wrap;
  align-content: center;
}

.header-left {
  background-color: #4CAF50;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.college-name {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  white-space: nowrap;
}

.page-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  line-height: 1.3;
}

/* 内容区域 */
.content {
  display: flex;
  flex: 1;
}

/* 左侧导航栏 */
.sidebar {
  width: 200rpx;
  background-color: #f8f8f8;
  border-right: 1rpx solid #e0e0e0;
  padding: 20rpx 0;
}

.nav-item {
  padding: 30rpx 20rpx;
  margin: 10rpx 0;
  background-color: #f0f0f0;
  border-left: 4rpx solid transparent;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.nav-item.active {
  background-color: white;
  border-left-color: #4CAF50;
  color: #4CAF50;
  font-weight: bold;
}

/* 右侧主要内容 */
.main-content {
  flex: 1;
  padding: 20rpx;
  background-color: white;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  border: none;
  background: transparent;
  font-size: 28rpx;
}

.search-icon {
  color: #999;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 课程表图片 */
.course-table {
  width: 100%;
  margin-bottom: 20rpx;
}

.course-image {
  width: 100%;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 课程列表 */
.course-list {
  width: 100%;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-info {
  flex: 1;
}

.course-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.course-time {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.course-teacher {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.course-status {
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
}

.course-status.available {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.course-status.full {
  background-color: #ffe8e8;
  color: #f44336;
}

