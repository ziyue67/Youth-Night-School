/* index.wxss */

page {
  background-color: #f6f6f6;
  padding-bottom: 120rpx;
}

.container {
  font-family: PingFang SC;
}

/* �ֲ�ͼ�� */
.swiper-container {
  width: 100%;
  height: 25vh;
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.swiper-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

/* 学院课程入口区 */
.college-section {
  width: 100%;
  padding: 40rpx 0;
  background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
  margin-top: 20rpx;
  position: relative;
  overflow: hidden;
}

.college-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 200%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.section-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E88E5;
  text-shadow: 0 2rpx 4rpx rgba(30, 136, 229, 0.2);
  letter-spacing: 2rpx;
  animation: titleGlow 2s ease-in-out infinite alternate;
}

@keyframes titleGlow {
  0% { text-shadow: 0 2rpx 4rpx rgba(30, 136, 229, 0.2); }
  100% { text-shadow: 0 2rpx 8rpx rgba(30, 136, 229, 0.4), 0 0 20rpx rgba(30, 136, 229, 0.1); }
}

.title-line {
  width: 120rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #1E88E5, #64B5F6, #1E88E5);
  margin-top: 20rpx;
  border-radius: 2rpx;
  animation: linePulse 2s ease-in-out infinite;
}

@keyframes linePulse {
  0%, 100% { transform: scaleX(1); opacity: 1; }
  50% { transform: scaleX(1.2); opacity: 0.8; }
}

.college-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25rpx;
  padding: 0 40rpx;
  position: relative;
  z-index: 2;
}

.college-card {
  aspect-ratio: 1;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  position: relative;
  overflow: hidden;
  transform: translateY(0);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow:
    0 8rpx 25rpx rgba(0, 0, 0, 0.15),
    0 3rpx 10rpx rgba(0, 0, 0, 0.1);
}

.college-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  filter: blur(15rpx);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.college-card:hover::before {
  opacity: 0.4;
}

.college-card:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow:
    0 12rpx 35rpx rgba(0, 0, 0, 0.2),
    0 5rpx 15rpx rgba(0, 0, 0, 0.15);
}

.college-card::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.college-card:active::after {
  width: 300rpx;
  height: 300rpx;
}

.college-name {
  font-size: 26rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
  line-height: 1.3;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  position: relative;
  z-index: 2;
}

/* 近期动态推荐区 */
.activity-section {
  width: 100%;
  padding: 40rpx 0;
  background-color: white;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.section-title-left {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.section-more {
  font-size: 28rpx;
  color: #888;
}

/* 横向滚动动态列表样式 */
.activity-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 0 30rpx 20rpx;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
}

.news-card {
  display: inline-block;
  width: 300rpx;
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow:
    0 8rpx 30rpx rgba(0, 0, 0, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-right: 20rpx;
  vertical-align: top;
  white-space: normal;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.news-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 20rpx 0 0 20rpx;
}

.news-card.wechat::before {
  opacity: 0.8;
}

.news-card:hover {
  transform: translateY(-4rpx);
  box-shadow:
    0 12rpx 40rpx rgba(0, 0, 0, 0.08),
    0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.news-card:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow:
    0 6rpx 20rpx rgba(0, 0, 0, 0.1),
    0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.news-content {
  margin-bottom: 15rpx;
}

.news-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
  line-height: 1.3;
  letter-spacing: 0.3rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

.news-date {
  font-size: 22rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
  font-weight: 400;
}

.news-description {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

.news-image {
  text-align: center;
  margin-top: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wechat-logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 8rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1E88E5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

