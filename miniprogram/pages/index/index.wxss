/* 卡片浮动动画 */
@keyframes cardFloat1 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(1deg); }
}

@keyframes cardFloat2 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(-1deg); }
}

@keyframes cardFloat3 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(0.5deg); }
}

@keyframes cardFloat4 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(-0.5deg); }
}

@keyframes cardFloat5 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(1.5deg); }
}

@keyframes cardFloat6 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(-1.5deg); }
}

@keyframes cardFloat7 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(0.8deg); }
}

@keyframes cardFloat8 {
  0%, 100% { transform: translateY(0) rotateZ(0deg); }
  50% { transform: translateY(-5rpx) rotateZ(-0.8deg); }
}

