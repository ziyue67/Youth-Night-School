.about-section {
  width: 100%;
  padding: 40rpx;
  background-color: white;
  margin-top: 20rpx;
  text-align: center;
}

.about-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin: 30rpx 0;
}

.about-button {
  width: 200rpx;
