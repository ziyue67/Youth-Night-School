<view class="phone-login-container">
  <view class="header-section">
    <text class="title">手机号快捷登录</text>
    <text class="subtitle">微信授权，一键登录</text>
  </view>

  <view class="login-section">
    <button 
      class="phone-auth-btn"
      open-type="getPhoneNumber"
      bindgetphonenumber="handlePhoneAuth"
      phone-number-no-quota-toast="{{false}}"
    >
      微信手机号快捷登录
    </button>
    
    <view class="tips">
      <text>• 使用微信绑定的手机号</text>
      <text>• 无需输入验证码</text>
      <text>• 安全可靠，一键登录</text>
    </view>
  </view>

  <view class="footer-section">
    <text class="switch-method" bindtap="switchToSms">使用短信验证码登录</text>
  </view>
</view>
