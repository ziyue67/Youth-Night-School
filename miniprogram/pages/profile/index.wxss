.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.info-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #666;
  flex: 1;
}

.value {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
}

.bind-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0;
}

.tip-section {
  margin-top: 40rpx;
  text-align: center;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
}

