/* pages/news/index.wxss */
@import 'index-wxa-auto-dark.wxss';

/* È°µÈù¢ÂÆπÂô® */
.container {
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding: 20rpx;
}

/* È°µÈù¢Ê†áÈ¢òÂå∫Âüü */
.page-header {
  text-align: center;
  padding: 40rpx 0 30rpx;
  position: relative;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 2rpx;
  position: relative;
  display: inline-block;
}

.page-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 2rpx;
}

/* Êñ∞ÈóªÂàóË°® */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 20rpx;
}

.news-item {
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow:
    0 8rpx 30rpx rgba(0, 0, 0, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.news-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea, #764ba2);
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 20rpx 0 0 20rpx;
}

.news-item.wechat::before {
  opacity: 1;
}

.news-item:hover {
  transform: translateY(-4rpx);
  box-shadow:
    0 12rpx 40rpx rgba(0, 0, 0, 0.08),
    0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.news-item:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow:
    0 6rpx 20rpx rgba(0, 0, 0, 0.1),
    0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.news-content {
  flex: 1;
  padding-right: 24rpx;
}

.news-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

.news-date {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.news-date::before {
  content: 'üìÖ';
  margin-right: 8rpx;
  font-size: 20rpx;
}

.news-description {
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
  background: rgba(102, 126, 234, 0.05);
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  border-left: 3rpx solid #667eea;
}

.news-image {
  margin-left: 20rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wechat-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 10rpx;
  transition: all 0.3s ease;
}

.news-item:hover .wechat-logo {
  transform: scale(1.05);
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.35);
}

.image-label {
  font-size: 20rpx;
  color: #667eea;
  margin-top: 8rpx;
  font-weight: 500;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  letter-spacing: 0.5rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #bdc3c7;
  margin-top: 12rpx;
  font-weight: 400;
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #f3f3f3;
  border-top: 5rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 30rpx;
  color: #5a6c7d;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #95a5a6;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* Âà∑Êñ∞ÊèêÁ§∫ */
.refresh-tip {
  text-align: center;
  padding: 40rpx 0;
  margin-top: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  margin: 30rpx 20rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.refresh-text {
  font-size: 26rpx;
  color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
  letter-spacing: 1rpx;
  font-weight: 500;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  display: inline-block;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 750rpx) {
  .news-title {
    font-size: 32rpx;
  }
  
  .news-description {
    font-size: 26rpx;
  }
  
  .wechat-logo {
    width: 100rpx;
    height: 100rpx;
  }
}