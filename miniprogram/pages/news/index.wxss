/* pages/news/index.wxss */
@import 'index-wxa-auto-dark.wxss'

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.news-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.news-item.wechat {
  border-left: 6rpx solid #07c160;
}

.news-content {
  flex: 1;
}

.news-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

.news-image {
  margin-left: 20rpx;
}

.wechat-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}