/* pages/news/index.wxss */
@import 'index-wxa-auto-dark.wxss';

/* 新闻列表 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.news-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea, #764ba2);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.news-item.wechat::before {
  opacity: 1;
}

.news-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.news-content {
  flex: 1;
  padding-right: 20rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.news-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.news-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.news-image {
  margin-left: 20rpx;
  flex-shrink: 0;
}

.wechat-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 刷新提示 */
.refresh-tip {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.refresh-text {
  font-size: 24rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  padding: 12rpx 30rpx;
  border-radius: 20rpx;
  letter-spacing: 0.5rpx;
}