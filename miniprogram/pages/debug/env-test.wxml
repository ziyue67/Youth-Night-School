<view class="debug-container">
  <view class="header">
  <text class="title">云环境诊断工具</text>
  <text class="subtitle">环境ID: {{envConfig.envId}}</text>
  </view>

  <button class="test-btn" bindtap="testEnvironment" loading="{{isChecking}}">
    {{isChecking ? '检查中...' : '开始检查'}}
  </button>

  <view class="results">
    <view wx:for="{{testResults}}" wx:key="name" class="result-item {{item.status.includes('❌') ? 'error' : ''}}">
      <text class="status">{{item.status}}</text>
      <text class="name">{{item.name}}</text>
      <text class="detail">{{item.detail}}</text>
      <text wx:if="{{item.fix}}" class="fix">{{item.fix}}</text>
    </view>
  </view>

  <view class="fix-guide">
    <text class="guide-title">修复指南</text>
    <view wx:for="{{getFixGuide}}" wx:key="step" class="guide-item">
      <text class="step">{{item.step}}.</text>
      <text class="guide-text">{{item.title}}: {{item.action}}</text>
    </view>
  </view>

  <button class="fix-btn" bindtap="fixEnvironment">一键修复</button>
</view>