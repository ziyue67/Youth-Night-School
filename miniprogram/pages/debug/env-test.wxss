.debug-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 44rpx;
  margin-bottom: 40rpx;
}

.results {
  margin-bottom: 40rpx;
}

.result-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  border-left: 4rpx solid #007aff;
}

.result-item.error {
  border-left-color: #ff3b30;
}

.status {
  font-size: 24rpx;
  margin-right: 20rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.detail {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.fix {
  font-size: 24rpx;
  color: #007aff;
  display: block;
}

.fix-guide {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.guide-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.step {
  font-size: 24rpx;
  color: #007aff;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 60rpx;
}

.guide-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.fix-btn {
  width: 100%;
  height: 88rpx;
  background-color: #ff3b30;
  color: #fff;
  border-radius: 44rpx;
  margin-top: 40rpx;
}