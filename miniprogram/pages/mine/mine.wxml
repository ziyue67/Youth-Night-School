<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <view wx:if="{{!isLogin}}" class="login-area">
      <view class="login-btn" bindtap="showLoginOptions">
        <image class="avatar" src="../../images/icons/avatar.png" mode="aspectFit"></image>
        <text class="login-text">请登录</text>
      </view>
      <text class="login-tip">登录后享受更多功能</text>
    </view>
    
    <view wx:else class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '../../images/icons/avatar.png'}}" mode="aspectFit"></image>
      <view class="user-details">
        <text class="nickname">{{userInfo.nickName || '青春夜校学员'}}</text>
        <text class="phone">{{userInfo.phone || ''}}</text>
      </view>
    </view>
  </view>
  
  <!-- 功能统计 -->
  <view class="stats-section">
    <view class="stat-item">
      <text class="stat-number">{{points}}</text>
      <text class="stat-label">总积分</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{tasks.length}}</text>
      <text class="stat-label">任务数</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{totalSigns || 0}}</text>
      <text class="stat-label">签到数</text>
    </view>
  </view>
  
  <!-- 数据加载状态 -->
  <view wx:if="{{loading}}" class="loading-section">
    <text class="loading-text">数据加载中...</text>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item points-item" bindtap="gotoPoints">
      <view class="menu-icon-wrapper points-icon-wrapper">
        <image class="menu-icon points-icon" src="../../images/icons/points.png" mode="aspectFit"></image>
      </view>
      <view class="menu-content">
        <text class="menu-text points-text">我的积分</text>
        <text class="menu-desc points-desc">查看积分明细</text>
      </view>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item tasks-item" bindtap="gotoTasks">
      <view class="menu-icon-wrapper tasks-icon-wrapper">
        <image class="menu-icon tasks-icon" src="../../images/icons/tasks.png" mode="aspectFit"></image>
      </view>
      <view class="menu-content">
        <text class="menu-text tasks-text">夜校任务</text>
        <text class="menu-desc tasks-desc">完成学习任务</text>
      </view>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item sign-item" bindtap="handleDailySign">
      <view class="menu-icon-wrapper sign-icon-wrapper">
        <image class="menu-icon sign-icon" src="../../images/icons/sign.png" mode="aspectFit"></image>
      </view>
      <view class="menu-content">
        <text class="menu-text sign-text">每日签到</text>
        <text class="sign-status">{{signedToday ? '已签到' : '未签到'}}</text>
      </view>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
  </view>

  <!-- 设置和退出 -->
  <view class="settings-section">
    <view class="menu-item contact-item" bindtap="gotoContact">
      <image class="menu-icon contact-icon" src="../../images/icons/contact.png" mode="aspectFit"></image>
      <text class="menu-text contact-text">联系我们</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view wx:if="{{isLogin}}" class="menu-item logout-item" bindtap="handleLogout">
      <image class="menu-icon logout-icon" src="../../images/icons/logout.png" mode="aspectFit"></image>
      <text class="menu-text logout-text">退出登录</text>
    </view>
  </view>
</view>
