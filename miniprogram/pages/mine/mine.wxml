<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <view wx:if="{{!isLogin}}" class="login-area">
      <view class="login-btn" bindtap="showLoginOptions">
        <image class="avatar" src="../../images/icons/avatar.png" mode="aspectFit"></image>
        <text class="login-text">请登录</text>
      </view>
      <text class="login-tip">登录后享受更多功能</text>
    </view>
    
    <view wx:else class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '../../images/icons/avatar.png'}}" mode="aspectFit"></image>
      <view class="user-details">
        <text class="nickname">{{userInfo.nickName || '青春夜校学员'}}</text>
        <text class="phone">{{userInfo.phoneNumber || ''}}</text>
        <text class="points">积分：{{points}}分</text>
      </view>
    </view>
  </view>

  <!-- 功能统计 -->
  <view class="stats-section">
    <view class="stat-item">
      <text class="stat-number">{{points}}</text>
      <text class="stat-label">总积分</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{tasks.length}}</text>
      <text class="stat-label">任务数</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{signRecord.length}}</text>
      <text class="stat-label">签到数</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="gotoPoints">
      <image class="menu-icon" src="../../images/icons/points.png" mode="aspectFit"></image>
      <text class="menu-text">我的积分</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item" bindtap="gotoTasks">
      <image class="menu-icon" src="../../images/icons/tasks.png" mode="aspectFit"></image>
      <text class="menu-text">夜校任务</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item" bindtap="handleDailySign">
      <image class="menu-icon" src="../../images/icons/sign.png" mode="aspectFit"></image>
      <text class="menu-text">每日签到</text>
      <text class="sign-status">{{signedToday ? '已签到' : '未签到'}}</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item" bindtap="gotoSign">
      <image class="menu-icon" src="../../images/icons/sign.png" mode="aspectFit"></image>
      <text class="menu-text">课程签到</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item" bindtap="gotoProfile">
      <image class="menu-icon" src="../../images/icons/profile.png" mode="aspectFit"></image>
      <text class="menu-text">个人资料</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view wx:if="{{!isLogin}}" class="menu-item" bindtap="gotoPhoneLogin">
      <image class="menu-icon" src="../../images/icons/phone.png" mode="aspectFit"></image>
      <text class="menu-text">手机号登录</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 设置和退出 -->
  <view class="settings-section">
    <view class="menu-item" bindtap="gotoContact">
      <image class="menu-icon" src="../../images/icons/contact.png" mode="aspectFit"></image>
      <text class="menu-text">联系我们</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item" bindtap="gotoAbout">
      <image class="menu-icon" src="../../images/icons/about.png" mode="aspectFit"></image>
      <text class="menu-text">关于我们</text>
      <image class="arrow" src="../../images/icons/arrow.svg" mode="aspectFit"></image>
    </view>
    
    <view wx:if="{{isLogin}}" class="menu-item logout" bindtap="handleLogout">
      <image class="menu-icon" src="../../images/icons/logout.png" mode="aspectFit"></image>
      <text class="menu-text">退出登录</text>
    </view>
  </view>
</view>