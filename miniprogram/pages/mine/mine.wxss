/* 用户中心页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.login-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.login-text {
  font-size: 32rpx;
  font-weight: bold;
}

.login-tip {
  font-size: 24rpx;
  margin-top: 10rpx;
  opacity: 0.8;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-details {
  margin-left: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

.points {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 功能统计 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: white;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.sign-status {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

.logout {
  color: #ff4757;
}

/* 设置区域 */
.settings-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
