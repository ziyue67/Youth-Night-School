/* 用户中心页面样式 */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 50rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.user-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.user-section::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -5%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.login-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.login-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.25);
  padding: 24rpx 50rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.login-text {
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.login-tip {
  font-size: 26rpx;
  margin-top: 16rpx;
  opacity: 0.85;
  letter-spacing: 0.5rpx;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.user-details {
  margin-left: 30rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.phone {
  font-size: 26rpx;
  opacity: 0.9;
  letter-spacing: 0.5rpx;
}

/* 手机号绑定提示 */
.phone-bind-notice {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.notice-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
  line-height: 1.5;
}

.phone-bind-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 22rpx 50rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.phone-bind-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.3);
}

/* 功能统计 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: white;
  padding: 40rpx 30rpx;
  margin: 30rpx 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.stats-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.stat-item {
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -20rpx;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #f0f0f0;
}

.stat-number {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
  opacity: 0.9;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.sign-status {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
  padding: 6rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
  transition: transform 0.2s ease;
}

.menu-item:active .arrow {
  transform: translateX(6rpx);
}

.logout {
  color: #ff4757;
}

.logout .menu-text {
  color: #ff4757;
  font-weight: 600;
}

/* 设置区域 */
.settings-section {
  background: white;
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
