/* 用户中心页面样式 */

/* 页面容器 */
.container {
  background: linear-gradient(180deg, #f8f9ff 0%, #ffffff 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 60rpx;
  color: white;
  position: relative;
  overflow: hidden;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.user-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.user-section::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -5%;
  width: 250rpx;
  height: 250rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.02) 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(5deg); }
}

.login-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.login-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 28rpx 60rpx;
  border-radius: 60rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.login-btn:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 28rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.login-btn:hover .avatar {
  transform: rotate(5deg);
}

.login-text {
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.login-tip {
  font-size: 28rpx;
  margin-top: 24rpx;
  opacity: 0.9;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.user-details {
  margin-left: 32rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.phone {
  font-size: 28rpx;
  opacity: 0.95;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 手机号绑定提示 */
.phone-bind-notice {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  margin: 30rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  position: relative;
  overflow: hidden;
}

.phone-bind-notice::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.notice-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  line-height: 1.6;
  font-weight: 500;
}

.phone-bind-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24rpx 60rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.5rpx;
}

.phone-bind-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.5);
}

/* 功能统计 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  padding: 60rpx 20rpx;
  margin: 40rpx 20rpx;
  border-radius: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.15);
  position: relative;
  overflow: hidden;
  border: 3rpx solid rgba(102, 126, 234, 0.1);
}

.stats-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 40rpx 40rpx 0 0;
}

.stats-section::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.05) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
}

.stat-item {
  text-align: center;
  position: relative;
  flex: 1;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 20rpx 10rpx;
  border-radius: 24rpx;
  margin: 0 10rpx;
}

.stat-item:active {
  transform: scale(0.95) translateY(-4rpx);
  background: rgba(102, 126, 234, 0.05);
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -10rpx;
  top: 30%;
  height: 40%;
  width: 3rpx;
  background: linear-gradient(180deg, transparent, rgba(102, 126, 234, 0.3), transparent);
  border-radius: 3rpx;
}

.stat-number {
  display: block;
  font-size: 64rpx;
  font-weight: 800;
  color: #667eea;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.stat-number::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 2rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-item:hover .stat-number::before {
  opacity: 1;
}

.stat-item:active .stat-number {
  transform: scale(1.15);
  color: #764ba2;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 1rpx;
  font-weight: 600;
  text-transform: uppercase;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.stat-item:active .stat-label {
  opacity: 1;
  color: #667eea;
}

/* 数据加载状态 */
.loading-section {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  margin: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.1);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
}

.loading-text {
  font-size: 30rpx;
  color: #667eea;
  font-weight: 500;
}

/* 手动刷新区域 */
.refresh-section {
  text-align: center;
  padding: 20rpx 30rpx 30rpx;
}

.refresh-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 50rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.5rpx;
}

.refresh-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.5);
}

.refresh-text {
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 功能菜单 */
.menu-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  margin: 30rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.12);
  border: 2rpx solid rgba(102, 126, 234, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  transform: translateX(4rpx);
}

.menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transition: width 0.3s ease;
}

.menu-item:active::before {
  width: 4rpx;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 28rpx;
  opacity: 0.85;
  transition: all 0.3s ease;
}

.menu-item:active .menu-icon {
  transform: scale(1.1);
  opacity: 1;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #222;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.sign-status {
  font-size: 24rpx;
  color: #5568d3;
  margin-right: 20rpx;
  padding: 8rpx 20rpx;
  background: rgba(85, 104, 211, 0.15);
  border-radius: 24rpx;
  font-weight: 500;
  border: 1rpx solid rgba(85, 104, 211, 0.3);
}

.arrow {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.menu-item:active .arrow {
  transform: translateX(8rpx);
  opacity: 0.8;
}

.logout {
  background: linear-gradient(90deg, rgba(255, 71, 87, 0.05) 0%, rgba(255, 71, 87, 0.02) 100%);
}

.logout .menu-text {
  color: #ff4757;
  font-weight: 700;
}

.logout .menu-icon {
  opacity: 0.9;
}

/* 设置区域 */
.settings-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  margin: 30rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.12);
  border: 2rpx solid rgba(102, 126, 234, 0.08);
}

/* 联系我们特殊样式 */
.contact-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 0;
  border-radius: 32rpx 32rpx 0 0;
  position: relative;
  overflow: hidden;
  border: none;
}

.contact-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.contact-item:active::before {
  left: 100%;
}

.contact-icon {
  width: 52rpx;
  height: 52rpx;
  opacity: 1;
  filter: brightness(0) invert(1);
}

.contact-text {
  color: white;
  font-weight: 700;
  font-size: 34rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.contact-item .arrow {
  opacity: 0.8;
  filter: brightness(0) invert(1);
}

